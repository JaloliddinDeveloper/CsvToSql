@{
    ViewData["Title"] = "CSV Upload";
}

<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --bg: #0f1724;
            --card: rgba(255,255,255,0.04);
            --glass: rgba(255,255,255,0.06);
            --muted: rgba(255,255,255,0.7);
            --accent: linear-gradient(90deg,#6EE7B7,#3B82F6);
            --glass-border: rgba(255,255,255,0.08);
            --radius: 14px;
            --shadow: 0 8px 30px rgba(2,6,23,0.6);
            --max-width: 760px;
            font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: radial-gradient(1200px 600px at 10% 10%, rgba(59,130,246,0.12), transparent 8%), radial-gradient(1000px 500px at 90% 90%, rgba(99,102,241,0.10), transparent 8%), var(--bg);
            color: #e6eef8;
            padding: 40px 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: var(--max-width);
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            border: 1px solid var(--glass-border);
            border-radius: var(--radius);
            padding: 28px;
            box-shadow: var(--shadow);
            backdrop-filter: blur(8px) saturate(120%);
        }

        h2 {
            margin: 0 0 6px 0;
            font-size: 1.6rem;
            font-weight: 650;
            letter-spacing: -0.2px;
            background: linear-gradient(90deg,#A7F3D0,#BFDBFE);
            -webkit-background-clip: text;
            color: transparent;
            text-align: center;
        }

        hr {
            border: 0;
            height: 1px;
            background: linear-gradient(90deg, rgba(255,255,255,0.06), rgba(255,255,255,0.02));
            margin: 14px 0 20px;
        }

        form {
            display: grid;
            gap: 14px;
        }

        .form-label {
            font-size: .92rem;
            color: var(--muted);
            margin-bottom: 8px;
            font-weight: 600;
        }

        input[type="file"].form-control {
            display: block;
            width: 100%;
            padding: 16px 14px;
            border-radius: 12px;
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            border: 1px solid var(--glass-border);
            color: #fff;
            cursor: pointer;
            transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
            outline: none;
        }

            input[type="file"].form-control::-webkit-file-upload-button {
                visibility: hidden;
            }

            input[type="file"].form-control::before {
                content: "Choose file";
                display: inline-block;
                background: linear-gradient(90deg,#111827, rgba(255,255,255,0.02));
                border: 1px solid rgba(255,255,255,0.04);
                padding: 8px 12px;
                margin-right: 10px;
                border-radius: 8px;
                font-weight: 600;
                font-size: .92rem;
                color: #fff;
                cursor: pointer;
            }

            input[type="file"].form-control:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(59,130,246,0.08);
            }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            font-weight: 700;
            border: none;
            padding: 12px 18px;
            border-radius: 12px;
            transition: transform .12s ease, box-shadow .12s ease;
            background-image: var(--accent);
            color: #07203a;
            box-shadow: 0 8px 24px rgba(59,130,246,0.18), inset 0 -2px 0 rgba(0,0,0,0.08);
        }

            .btn:hover {
                box-shadow: 0 12px 40px rgba(59,130,246,0.20);
                transform: translateY(-3px);
            }

            .btn:active {
                transform: translateY(1px) scale(.998);
            }

        .alert {
            border-radius: 10px;
            padding: 12px 14px;
            font-weight: 600;
            color: #052026;
            background: linear-gradient(90deg,#BBF7D0,#BFDBFE);
            border: 1px solid rgba(255,255,255,0.06);
            margin-top: 12px;
            display: inline-block;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <h2>CSV Fayl Yuklash</h2>
        <hr />

        <form asp-action="UploadCsv" asp-controller="Home" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label for="file" class="form-label">CSV faylni tanlang:</label>
                <input type="file" name="file" id="file" class="form-control" />
            </div>
            <button type="submit" class="btn">📂 Yuklash</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert">@ViewBag.Message</div>
        }
    </div>
</body>
</html>
