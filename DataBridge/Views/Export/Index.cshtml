@model DataBridge.Models.Excels.ExportRequest
@{
    ViewData["Title"] = "📊 SQL Export to Excel";
}

<div class="export-page">
    <div class="form-wrapper">
        <div class="form-card">
            <h2 class="title"><i class="bi bi-file-earmark-excel"></i> SQL Data Export</h2>

            <form asp-action="Index" method="post" onsubmit="showProgress()">
                <div class="mb-3">
                    <label class="form-label">🔗 Database Connection String</label>
                    <input asp-for="ConnectionString" class="form-control" placeholder="Server=...;Database=...;User Id=...;Password=..." />
                    <span asp-validation-for="ConnectionString" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">📝 SQL Query</label>
                    <textarea asp-for="SqlQuery" class="form-control" rows="5" placeholder="SELECT * FROM Students"></textarea>
                    <span asp-validation-for="SqlQuery" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">📂 File Name</label>
                    <input asp-for="FileName" class="form-control" placeholder="MyExport" />
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="bi bi-download"></i> Export to Excel
                </button>
            </form>

            <div class="progress-section">
                <label class="fw-bold">⏳ Export Progress</label>
                <div class="progress-bar">
                    <div id="progressBar" class="progress-fill">0%</div>
                </div>
            </div>

            <div class="queries-section">
                <h5><i class="bi bi-collection"></i> Saved Queries</h5>
                <ul id="savedQueries" class="query-list"></ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        async function loadSavedQueries() {
            const res = await axios.get('/Export/GetSavedQueries');
            const list = document.getElementById('savedQueries');
            list.innerHTML = '';
            res.data.forEach(q => {
                const li = document.createElement('li');
                li.className = "query-item";
                li.innerHTML = `
                    <span>
                        <strong>${q.name}</strong>
                        <small>(${q.category ?? "General"})</small>
                    </span>
                    <div class="query-actions">
                        <button class="btn-use" onclick="useQuery('${q.sql.replace(/'/g, "\\'")}')">
                            <i class="bi bi-play"></i>
                        </button>
                        <button class="btn-delete" onclick="deleteQuery('${q.name}','${q.category ?? ""}')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>`;
                list.appendChild(li);
            });
        }

        function useQuery(sql) {
            document.querySelector('[name="SqlQuery"]').value = sql;
        }

        async function deleteQuery(name, category) {
            await axios.post('/Export/DeleteQuery', { name, category });
            loadSavedQueries();
        }

        function showProgress() {
            const interval = setInterval(async () => {
                const res = await axios.get('/Export/GetProgress');
                const { rows, done, total } = res.data;
                const percent = total > 0 ? Math.floor((rows / total) * 100) : 0;
                const bar = document.getElementById('progressBar');
                bar.style.width = percent + '%';
                bar.innerText = percent + '%';

                if (done) {
                    clearInterval(interval);
                    bar.classList.add('done');
                    bar.innerText = "✅ Done";
                }
            }, 1000);
        }

        loadSavedQueries();
    </script>
}

